<?xml version="1.0" encoding="utf-8" ?>
<UipTask Name="MockTask2" xmlns="http://www.quokka.org/schemas/2006/UipTask.xsd">
  <Using Namespace="Quokka.Uip.MockApp"/>
  <State Type="MockState"/>
  <NavigationGraph StartNode="Node1">
    <Node Name="Node1">
      <View Type="MockView1"/>
      <Controller Type="MockController1"/>
      <NavigateTo NavigateValue="Next" Node="Node2"/>
    </Node>
    <Node Name="Node2">
      <View Type="MockView2"/>
      <Controller Type="MockController2"/>
      <NavigateTo NavigateValue="Back" Node="Node1"/>
      <NavigateTo NavigateValue="Next" Node="Node3"/>
      <NavigateTo NavigateValue="Error" Node="ErrorNode"/>
    </Node>
    <Node Name="Node3">
      <View Type="MockView1"/>
      <Controller Type="MockController2"/>
      <NavigateTo NavigateValue="Next" Node="Node1"/>
    </Node>
    <Node Name="ErrorNode">
      <View Type="MockView2"/>
      <Controller Type="MockController2"/>
      <NavigateTo NavigateValue="Next" Node="Node1"/>
      <!-- transitions for "Back" and "Error" are missing -->
    </Node>
  </NavigationGraph>
</UipTask>
